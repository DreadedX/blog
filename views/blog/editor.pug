extends ../base

block header
	link(rel="stylesheet", href="https://cdn.quilljs.com/1.3.4/quill.core.css")

block content
	header
		nav
			.nav-wrapper
				.col.s12
					a.sidenav-trigger(href="#", data-target="mobile")
						i.material-icons menu
					a.brand-logo(href="#!") Blog
					ul.right.hide-on-med-and-down
						li
							a(href="/home") Home
						li
							a(href="/blog") Blog
					ul.sidenav#mobile
						li
							a(href="/home") Home
						li
							a(href="/blog") Blog

	main
		.container
			.row
				.input-field.col.l6.offset-l3.s12
					input.validate#title(type="text")
					label(for="title") TITEL

				.input-field.col.s12#editor

				.fixed-action-btn.toolbar#fab
					a.btn-floating.btn-large.orange
						i.large.material-icons text_format
					ul

	footer

block scripts
	script(type="text/javascript", src="https://cdn.quilljs.com/1.3.4/quill.core.js")
	script(type="text/javascript", src="/js/editor.js")
