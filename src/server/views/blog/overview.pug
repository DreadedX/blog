extends ../base

block content
	.parallax(style="background-image: url('/img/background.jpg');")
	.container
		.row
			.col.s12.blog-overview
				for post in posts
					.card.z-depth-3
						if (post.image)
							.card-image.darken(style="background-image: linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.5)),url('" + post.image + "');")
								span.card-title=post.title
						.card-content
							if (!post.image)
								span.card-title=post.title
							p=post.preview
						.card-action
							a.waves-effect.btn-flat(href="/blog/post/" + post.id) Read more
	
		.row.center
			ul.pagination
				li.disabled
					a(href="#!")
						i.material-icons chevron_left
				li.active
					a(href="#!") 1
				li.waves-effect
					a(href="#!") 2
				li.waves-effect
					a(href="#!") 3
				li.waves-effect
					a(href="#!") 4
				li.waves-effect
					a(href="#!")
						i.material-icons chevron_right
